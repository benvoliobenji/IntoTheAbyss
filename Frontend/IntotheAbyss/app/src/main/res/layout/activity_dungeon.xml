<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".dungeonActivity">

    <TextView
            android:text="No idea what to do from here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confusionMessage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp" app:layout_constraintVertical_bias="0.2"/>
    <Button
            android:text="Return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/returnButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.499" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="76dp"/>
    <TextView
            android:text="@string/connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/connectionText" android:textSize="24sp"
            android:layout_marginTop="97dp" app:layout_constraintTop_toBottomOf="@+id/confusionMessage"
            android:layout_marginBottom="106dp" app:layout_constraintBottom_toTopOf="@+id/returnButton"
            tools:text="@string/connection_status" app:layout_constraintVertical_bias="0.285"/>
</android.support.constraint.ConstraintLayout>