<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Hellur">

    <EditText
            android:layout_width="143dp"
            android:layout_height="70dp"
            android:inputType="textPersonName|text"
            android:text="@string/name"
            android:ems="10"
            android:id="@+id/hellur"
            tools:text="@string/hellur" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="cursive" android:textSize="36sp"
            android:layout_marginTop="111dp"
            app:layout_constraintTop_toBottomOf="@+id/fontSwitch" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="134dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="134dp" android:autofillHints=""/>
    <Switch
            android:text="@string/switchString"
            android:layout_width="177dp"
            android:layout_height="66dp"
            android:id="@+id/fontSwitch" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="153dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="117dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="117dp"/>
    <Button
            android:text="@string/returnString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/returnButton" android:layout_marginTop="135dp"
            app:layout_constraintTop_toBottomOf="@+id/hellur" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp"/>
</android.support.constraint.ConstraintLayout>