<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/text"/>
    <Button
            android:text="@string/hellur"
            android:layout_width="133dp"
            android:layout_height="172dp"
            android:id="@+id/button1"
            style="@style/Widget.AppCompat.Button.Colored" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"/>
    <Button
            android:text="@string/wooooo"
            android:layout_width="137dp"
            android:layout_height="192dp"
            android:id="@+id/button2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="44dp"/>

</android.support.constraint.ConstraintLayout>